# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Slack Bot
SLACK_BOT_TOKEN=xoxb-...
SLACK_SIGNING_SECRET=...
SLACK_APP_TOKEN=xapp-...
# Your Slack user ID (for DMs from the agent)
SLACK_USER_ID=U...

# tldv (get your key at https://tldv.io/app/settings/personal-settings/api-keys)
# Requires Business plan. Leave empty to disable tldv polling.
TLDV_API_KEY=...

# Notion
NOTION_API_KEY=secret_...
# Database IDs - run `npm run setup-notion` to create these automatically
NOTION_CONTENT_DB_ID=...
NOTION_TRANSCRIPTS_DB_ID=...
# Only needed for initial setup (the Notion page where DBs will be created)
NOTION_PARENT_PAGE_ID=...

# Content schedule (cron expressions)
# Default: Mon, Wed, Fri at 9:00 AM
CONTENT_PING_CRON=0 9 * * 1,3,5

# Your name (used in content drafts)
OWNER_NAME=

# Posting goals
LINKEDIN_POSTS_PER_WEEK=3
NEWSLETTER_PER_WEEK=1

# Voice profile (optional - defaults to ./voice-profile.md)
# VOICE_PROFILE_PATH=./my-voice-profile.md
